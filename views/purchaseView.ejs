<div class="container">    
    <table class="table table-bordered" style="text-align: center;">
        <thead>
            <tr>
                <th>고객 ID</th>
                <th>고객명</th>
                <th>상품 ID</th>
                <th>상품명</th>
                <th>구매일</th>
                <th>가격</th>
                <th>포인트</th>
                <th>구매량</th>
                <th>총가격</th>
                <th>지불여부</th>
                <th>취소여부</th>
                <th>환불여부</th>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            <% if (purchases.length > 0) { %>
                <% purchases.forEach(purchase => { %>
                    <tr>
                        <td><%= purchase.loginid %></td>
                        <td><%- purchase.customer_name %></td>
                        <td><%= purchase.mer_id %></td>
                        <td><%- purchase.product_name %></td>
                        <td><%= purchase.date %></td>
                        <td><%- purchase.price.toLocaleString() %> 원</td>
                        <td><%= purchase.point %></td>
                        <td><%= purchase.qty %></td>
                        <td><%- purchase.total.toLocaleString() %> 원</td>
                        <td><%= purchase.payYN %></td>
                        <td><%= purchase.cancel %></td>
                        <td><%= purchase.refund %></td>
                        <td>
                            <a href="/purchaseupdate/<%= purchase.purchase_id %>" style="text-decoration: none;">수정</a>
                        </td>
                        <td>
                            <a href="/purchasedelete/<%= purchase.purchase_id %>" style="text-decoration: none;" 
                                onclick="return confirm('정말로 삭제하시겠습니까?')">삭제</a>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="14" style="text-align: center; padding: 20px;">
                        자료가 없으니 추가하세요.
                    </td>
                </tr>
            <% } %>
        </tbody>        
    </table>
</div>
